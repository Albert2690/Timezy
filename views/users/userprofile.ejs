<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Town</th> 
            <th scope="col">Adress</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>

           
        </tr>
    </thead>

    <% if(addresses.length > 0){ %>
        <% for(let i=0; i<addresses.length; i++){ %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= addresses[i].name %></td>
                <td><%= addresses[i].town %></td>
                <td><%= addresses[i].address %></td>
                <td><a href="/editaddress?id=<%=addresses[i]._id%>" class="btn btn-outline-dark" role="button">Edit</a></td>
                <td><a href="/deleteaddress?id=<%=addresses[i]._id%>" class="btn btn-outline-dark" role="button">Edit</a></td>

               
            </tr>
        <% } %>
    <% } else { %>
        <tr>
            <td colspan="4">Users Not found</td>
        </tr>
    <% } %>
</table>

