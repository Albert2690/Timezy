        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">
            <form action="/login" method="post">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <h3 class="color-primary">LOG IN</h3>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                  
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" id="form3Example3" name="email" class="form-control" />
                <label class="form-label" for="form3Example3" style="color:white;">Email address</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" id="form3Example4" name="password" class="form-control" />
                <label class="form-label" for="form3Example4" style="color:white">Password</label>
              </div>

              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-center mb-4">
                <button type="submit" class="btn btn-primary btn-block mb-4">
                    Login
                  </button>
                  <!-- <a href="/" class="btn btn-primary btn-block mb-4" role="button">Login</a> -->
               
              </div>
              <br>
              </form>
              <span style="color: #fff;">OR</span>
              <form action="/sendotp" onsubmit="validatelogin()" method="post">
              <div class="form-outline mb-4">
                <input type="text" id="form3Example4" name="mobile" class="form-control" />
                <label class="form-label" for="form3Example4" style="color:white">Enter Mobile</label>
              </div>

              <div class="form-check d-flex justify-content-center mb-4">
                <button type="submit" class="btn btn-primary btn-block mb-4">
                    Login  with OTP
                  </button>
             
              </div>
              <div class="form-check d-flex justify-content-center mb-4">
             

               <% if (typeof message !== 'undefined') { %>
                <p style="color: rgb(252, 7, 15);">
                  <%= message %>
                </p>
              <% } %>
             </div>


              <div class="form-check d-flex justify-content-center mb-4">
                <a href="/fpassword" style="color:red; font-size:large;" >Forgot password  ?</a>
              
             </div>
              <div class="form-check d-flex justify-content-center mb-4">
                 <a href="/register" style="color:red; font-size:large;" >Not registered yet Sign in ?</a>

                 <br><br>

                    
              
              </div>

              

            
              </div>
            </form>
          </div>
        </div>
      </div>
