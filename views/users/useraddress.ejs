<%- include('../partials/header')%>

<div class="dashboard-wrapper user-dashboard">
  <button class="bg-primary-light">
    <a href="/addaddress">Add new address +</a>
  </button>
    <div class="table-responsive">
      <table class="table">
      

        <thead>
        
          <tr>
            
            <th>Name</th>
            <th>Address</th>
            <th>Pincode</th>
            <th>State</th>

            <th >Phone</th>
            <th>Actions</th>
            
          </tr>
        </thead>
        <tbody>
          <% address.addresses.forEach((address)=>{%>
          <tr>
            
            <td><%=address.name%></td>
            <td><%=address.address%></td>
            <td><%=address.pincode%></td>
            <td><%=address.state%></td>

            <td><%=address.mobile%></td>
            <td>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default"><a href="/editaddres?id=<%=address._id%>"><i class="tf-pencil2" aria-hidden="true"></i></a></button>
                <button type="button" class="btn btn-default"><a href="/deleteaddress?id=<%=address._id%>"><i class="tf-ion-close" aria-hidden="true"></a></i></button>
              </div>
            </td>
          </tr>
          <% })%>
        </tbody>
     
      </table>
    </div>
  </div>
<%- include('../partials/footer')%>
