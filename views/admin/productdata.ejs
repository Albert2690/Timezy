<%- include('../layouts/header.ejs') %>
<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand">Welcome</a>
    <a href="/admin/insertproduct" class="btn btn-success" role="button">Add Products</a>
    <br><br>
    <a href="/admin/dashboard" class="btn btn-success" role="button">Back Home</a>
    <br><br>
    <a href="/admin/unlistedproducts" class="btn btn-success" role="button">Unlisted items</a>
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="search">
        <input class="btn btn-outline-success my-2 my-sm-0" value="search" type="submit">
      </form>
    <a href="/admin/logout" class="btn btn-danger" role="button">Logout</a>
</nav>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>

            <th scope="col">Description</th>
            <th scope="col">category</th>
            <th scope="col">Stock</th>

            <th scope="col">Price</th>
            <th scope="col">Edit</th>

            <th scope="col">Listed</th>

            <th scope="col">Delete</th>

           
        </tr>
    </thead>

    <% if(product.length > 0){ %>
        <% for(let i=0; i<product.length; i++){ %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= product[i].name %></td>
                <td>
                    <% if (product[i].image) { %>
                        <img src="/product-images/<%= product[i].image %>" alt="Product Image" width="50" height="50">
                    <% } else { %>
                        No Image Available
                    <% } %>
                </td>

                <td><%= product[i].description %></td>
                <td><%= product[i].category %></td>
                <td><%= product[i].stock %></td>


                <td><%= product[i].price %></td>

                
                <td><a href="/admin/editproduct?id=<%=product[i]._id%>" class="btn btn-outline-success" role="button">Edit</a></td>
                <td><a href="/admin/unlistproduct?id=<%=product[i]._id%>" class="btn btn-outline-success" role="button">Unlist</a></td>

                <td><a href="/admin/deleteproduct?id=<%=product[i]._id%>" class="btn btn-outline-success" role="button">Delete</a></td>

               
            </tr>
        <% } %>
    <% } else { %>
        <tr>
            <td colspan="4">Products Not Found</td>
        </tr>
    <% } %>
</table>

<%- include('../layouts/footer.ejs') %>