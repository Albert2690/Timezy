<%- include('../layouts/header') %>

                                         
<section class="vh-100" style="background-color: #eee;">

    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Product</p>
                                <form action="/admin/editeachproduct?id=<%= product %>" method="post" class="mx-1 mx-md-4"  enctype="multipart/form-data">
                                    
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                       

                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" name="productname" id="productname" placeholder="<%=products.name%>" value="<%=products.name%>" class="form-control" />
                                            <label class="form-label" for="form3Example1c">Enter Product name</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" name="description" id="description" placeholder="<%=products.description%>" value="<%=products.description%>" class="form-control" />
                                            <label class="form-label" for="form3Example3c">Enter Description</label>
                                        </div>
                                    </div>
                                    <!-- <div class="form-outline flex-fill mb-0">
                                        <select name="category" id="category" class="form-select">
                                            <% if (category.length >= 0) { %>
                                                <% for (let i = 0; i < category.length; i++) { %>
                                                    <option value="<%= category[i].name %>"><%= category[i].name %></option>
                                                <% } %>
                                            <% } else { %>
                                                <option value="">No categories available</option>
                                            <% } %>
                                        </select>
                                        <label class="form-label" for="category">Category</label>
                                    </div> -->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                        
                                            <select name="category" id="category" class="form-select">
                                                <% if (category.length >= 0) { %>
                                                    <% for (let i = 0; i < category.length; i++) { %>
                                                        <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                                                    <% } %>
                                                <% } else { %>
                                                    <option value="">No categories available</option>
                                                <% } %>
                                            </select>
                                            <label class="form-label" for="form3Example3c">Select Category</label>    
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" required name="price" id="price" placeholder="<%=products.price%>"  class="form-control" />
                                            <label class="form-label" for="form3Example4c">Enter product price</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" name="stock" id="price" placeholder="<%=product.stock%>"required class="form-control" />
                                            <label class="form-label" for="form3Example4c">Enter stock</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" name="discount" id="discount"   placeholder="Enter here" max="99" class="form-control" />
                                            <label class="form-label" for="form3Example4c">Enter Discount %</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="date" name="validity" id="validity" placeholder="" class="form-control" />
                                            <label class="form-label" for="form3Example4c">Enter offer validity</label>
                                        </div>
                                    </div>

                                  
                                   
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-image fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            <input type="file" name="images" id="image" class="form-control" accept="image/*" />
                                            <label class="form-label" for="images">Upload main image</label>
                                            <input type="file" name="images" id="image" class="form-control" accept="image/*" />
                                            <label class="form-label" for="image">Upload an image</label>
                                            <input type="file" name="images" id="image" class="form-control" accept="image/*" />
                                            <label class="form-label" for="image">Upload an image</label>
                                        </div>
                                    </div>
                                    <input type="hidden" name="id" value="<%= product%>">
                                    <br><br>
                                    <% if (typeof message !== 'undefined') { %>
                                        <!-- <script>
                                            Swal.fire({
                                                icon: 'success',
                                                title: 'Success',
                                                text: '<%= message %>',
                                            });
                                        </script> -->
                                        <%=message%>
                                    <% } %>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Update</button>
                                    </div>
                                   
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
 
</section>

<%- include('../layouts/footer') %>
